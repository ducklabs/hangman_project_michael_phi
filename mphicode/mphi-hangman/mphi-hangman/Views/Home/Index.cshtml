@model mphi_hangman.ViewModel.GameViewModel
    
@{
    ViewBag.Title = "Michael Phi's Hangman";
}

<div class="container">


    <div class="row">
        <div class="col-xs-12  text-center">
            @if (Model.CurrentAtemptNumber.Equals(BAL.RetryEnum.Retry.One))
            {
                <img class="hangmanImage" src="@Url.Content("~/Content/Image/hangman/hang0.gif")" />
            }
            else if (Model.CurrentAtemptNumber.Equals(BAL.RetryEnum.Retry.Two))
            {
                <img class="hangmanImage" src="@Url.Content("~/Content/Image/hangman/hang1.gif")" />
            }
            else if (Model.CurrentAtemptNumber.Equals(BAL.RetryEnum.Retry.Three))
            {
                <img class="hangmanImage" src="@Url.Content("~/Content/Image/hangman/hang2.gif")" />
            }

            else if (Model.CurrentAtemptNumber.Equals(BAL.RetryEnum.Retry.Four))
            {
                <img class="hangmanImage" src="@Url.Content("~/Content/Image/hangman/hang3.gif")" />
            }
            else if (Model.CurrentAtemptNumber.Equals(BAL.RetryEnum.Retry.Five))
            {
                <img class="hangmanImage" src="@Url.Content("~/Content/Image/hangman/hang4.gif")" />
            }
            else if (Model.CurrentAtemptNumber.Equals(BAL.RetryEnum.Retry.Six))
            {
                <img class="hangmanImage" src="@Url.Content("~/Content/Image/hangman/hang5.gif")" />
            }
            else if (Model.CurrentAtemptNumber.Equals(BAL.RetryEnum.Retry.Seven))
            {
                <img class="hangmanImage" src="@Url.Content("~/Content/Image/hangman/hang6.gif")" />
            }
            else if (Model.CurrentAtemptNumber.Equals(BAL.RetryEnum.Retry.Eight))
            {
                <img class="hangmanImage" src="@Url.Content("~/Content/Image/hangman/hang7.gif")" />
            }
            else if (Model.CurrentAtemptNumber.Equals(BAL.RetryEnum.Retry.Nine))
            {
                <img class="hangmanImage" src="@Url.Content("~/Content/Image/hangman/hang8.gif")" />
            }
            else if (Model.CurrentAtemptNumber.Equals(BAL.RetryEnum.Retry.Ten))
            {
                <img class="hangmanImage" src="@Url.Content("~/Content/Image/hangman/hang9.gif")" />
            }
            else if (Model.CurrentAtemptNumber.Equals(BAL.RetryEnum.Retry.Eleven))
            {
                <img class="hangmanImage" src="@Url.Content("~/Content/Image/hangman/hang10.gif")" />
                <span>Game Over</span>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div>
                Please select a character:
                <ul class="alphabitList">
                    @foreach (var letter in Model.Alphabit)
                    {
                        if (Model.UsedLetters.Contains(letter))
                        {
                            <li class="used" data-letter="@letter">@letter</li>
                        }
                        else
                        {
                            <li data-letter="@letter">@letter</li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>

</div>
